<div class="container">
  <h1>Users</h1>

  <table class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <% if current_user.admin? || user == current_user %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <%= link_to 'Show', user, class: 'btn btn-primary btn-sm' %>
              <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary btn-sm' %>
              <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= paginate @users, theme: "twitter-bootstrap-4", pagination_class: "pagination-sm",  nav_class: "d-inline-b" %>
  </div>

