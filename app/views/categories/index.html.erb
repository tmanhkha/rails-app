<div class="container">
  <h1>Categories</h1>

  <table class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Title</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.title %></td>
          <td>
            <%= link_to 'Show', category, class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-primary btn-sm' %>
            <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <div class="text-center">
    <%= paginate @categories, theme: "twitter-bootstrap-4", pagination_class: "pagination-sm",  nav_class: "d-inline-b" %>
  </div>

  <%= link_to 'New Category', new_category_path, class: 'btn btn-primary' %>

